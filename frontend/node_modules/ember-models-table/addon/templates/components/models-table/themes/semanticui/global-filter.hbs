{{#if hasBlock}}
  {{yield
    (hash
      themeInstance=themeInstance
    )
  }}
{{else}}
  <div class={{themeInstance.globalFilterWrapper}}>
    <div class="ui label">
      {{themeInstance.messages.searchLabel}}
    </div>
    {{input type="text"
            value=value
            enter=""
            placeholder=themeInstance.messages.searchPlaceholder}}
    {{#if globalFilterUsed}}
      <i class={{themeInstance.clearFilterIcon}} onclick={{action (mut value) ""}}></i>
    {{/if}}
  </div>
{{/if}}
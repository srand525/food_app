{{#if errors}}
  {{#form-for/custom-tag tagName=errorsTagName class=joinedErrorClasses}}
    {{#each limitedErrors as |error index|}}
      {{#form-for/custom-tag tagName=messageTagName id=(concat errorId "-" index) role="alert"}}
        {{#if hasBlock}}
          {{yield error}}
        {{else}}
          {{#if error.message}}
            {{error.message}}
          {{else}}
            {{error}}
          {{/if}}
        {{/if}}
      {{/form-for/custom-tag}}
    {{/each}}
  {{/form-for/custom-tag}}
{{/if}}

{{#form-field propertyName
    tagName="fieldset"
    class="checkbox-group"
    classNames=fieldClasses
    disabled=disabled
    errorClasses=errorClasses
    hintClasses=hintClasses
    inputClasses=inputClasses
    labelClasses=labelClasses
    object=object
    hint=hint
    form=form
    label=label as |f|}}
  {{form-label f.labelText required=required tagName="legend"}}

  <ul>
    {{#each options as |option|}}
      {{form-fields/checkbox-group/option
          object=object
          propertyName=propertyName
          option=option
          update=(action "updateSelection" option)
          disabled=disabled
          dir=dir
          lang=lang
          value=option
      }}
    {{/each}}
  </ul>

  {{f.errors}}
  {{f.hint}}
{{/form-field}}
